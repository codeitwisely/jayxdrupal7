<?php
/**
 * @file
 * Tests for CRUDS Functions used for the jdt_user_notes module.
 */

class JdtUserNotesReadNoteTestCase extends DrupalWebTestCase {

  /**
   * This function return the informations for this testCase.
   *
   * @return array
   *   An array of informations about the test purpose.
   */
  public static function getInfo() {
    return array(
      'name' => 'Test of selecting a note function',
      'description' => 'Ensure that the select note function work',
      'group' => 'Jdt user notes',
    );
  }

  /**
   * Enable any modules required for the test.
   */
  public function setUp() {
    // Enable any modules required for the test this should be an array of,
    // module names.
    parent::setUp(array('jdt_user_notes'));
    module_load_include('inc', 'jdt_user_notes', 'jdt_user_notes.crud');
  }

  /**
   * Test funtion to read a note.
   */
  public function testJdtUserNotesRead() {
    $entry = array(
      'article_nid' => 20,
      'author_uid' => 1,
      'note_text' => 'Here is the first test',
    );
    $note_id = _jdt_user_notes_create_note($entry);
    $select = _jdt_user_notes_select_note($note_id);
    $this->assertTrue($select, $select ? t('Entry selected.') : t('Impossible to select entry'), 'jdt_notes_user CRUD');
  }
}
