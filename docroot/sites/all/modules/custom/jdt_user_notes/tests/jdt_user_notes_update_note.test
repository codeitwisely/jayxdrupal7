<?php
/**
 * @file
 * Tests for CRUDS Functions used for the jdt_user_notes module.
 */

class JdtUserNotesUpdateNoteTestCase extends DrupalWebTestCase {

  /**
   * This function return the informations for this testCase.
   *
   * @return
   *   An array of informations about the test purpose.
   */
  public static function getInfo() {
    return array(
      'name' => 'Test of update note function',
      'description' => 'Ensure that the update note functions work',
      'group' => 'Jdt user notes',
    );
  }

  /**
   * Enable any modules required for the test.
   */
  public function setUp() {
    // Enable any modules required for the test this should be an array of,
    // module names.
    parent::setUp(array('jdt_user_notes'));
    module_load_include('inc', 'jdt_user_notes', 'jdt_user_notes.crud');
  }

  /**
   * Test function to update a note.
   */
  public function testJdtUserNotesUpdate() {
    $entry = array(
      'article_nid' => 20,
      'author_uid' => 1,
      'note_text' => 'Here is the first test',
    );
    _jdt_user_notes_create_note($entry);
    $entry_updated = array(
      'note_id' => 1,
      'article_nid' => 63,
      'author_uid' => 1,
      'note_text' => 'Here the modified note',
    );
    $update = _jdt_user_notes_updt_note($entry_updated);
    $this->assertTrue($update, $update ? t('Entry updated.') : t('Impossible to update entry'), 'jdt_notes_user CRUD');
  }
}
