<?php
/**
 * @file
 * Tests for CRUDS Functions used for the jdt_user_notes module.
 */

class JdtUserNotesCreateNoteTestCase extends DrupalWebTestCase {

  public static function getInfo() {
    return array(
      'name' => 'Test of create note function',
      'description' => 'Ensure that the create note\'s function work',
      'group' => 'Jdt user notes',
    );
  }

  public function setUp() {
    // Enable any modules required for the test this should be an array of,
    // module names.
    parent::setUp(array('jdt_user_notes'));
    module_load_include('inc', 'jdt_user_notes', 'jdt_user_notes.crud');
  }

  /**
   * Test function to create a note.
   */
  public function testJdtUserNotesCreate() {
    $entry = array(
      'article_nid' => 20,
      'author_uid' => 1,
      'note_text' => 'Here is the first test',
    );
    $insert = _jdt_user_notes_create_note($entry);
    $this->assertTrue($insert, $insert ? t('Entry inserted.') : t('Impossible to insert entry'), 'jdt_notes_user CRUD');
  }
}
